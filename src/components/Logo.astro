---
import { assets } from "../lib/assets";

interface Props {
  class?: string;
  size?: "sm" | "md" | "lg";
}

const { class: className = "", size = "md" } = Astro.props;

const sizeClasses = {
  sm: "h-6 sm:h-6",
  md: "h-8 sm:h-8", 
  lg: "h-10 sm:h-12"
};
---

<img 
  src={assets.logo} 
  alt="Logo" 
  class={`${sizeClasses[size]} ${className}`} 
/>
