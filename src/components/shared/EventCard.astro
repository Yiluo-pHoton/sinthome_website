---
interface Props {
  title: string;
  date: string;
  location: string;
  description: string;
  registrationUrl?: string;
  className?: string;
}

const { title, date, location, description, registrationUrl, className = "" } = Astro.props;
---

<div class={`p-6 bg-zinc-900/50 border border-zinc-800 rounded-lg ${className}`}>
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
      <div class="space-y-1">
        <p class="text-sm text-zinc-400 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
            <path fill="currentColor" d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2m0 16H5V9h14zM5 7V5h14v2z"/>
          </svg>
          {date}
        </p>
        <p class="text-sm text-zinc-400 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
            <path fill="currentColor" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7m0 9.5a2.5 2.5 0 0 1 0-5a2.5 2.5 0 0 1 0 5"/>
          </svg>
          {location}
        </p>
      </div>
    </div>
  </div>

  <p class="text-zinc-400 mb-4 line-clamp-3">
    {description}
  </p>

  {registrationUrl && (
    <a
      href={registrationUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
    >
      Register Now
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
        <path fill="currentColor" d="M14 3v2h3.59l-9.83 9.83l1.41 1.41L19 6.41V10h2V3m-2 16H5V5h7V3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-2z"/>
      </svg>
    </a>
  )}
</div>