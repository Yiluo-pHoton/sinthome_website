---
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Red + Cream - Vintage revolution */}
				<WarpBackground
					color1="#0f0f0f"
					color2="#f5f5dc"
					color3="#d40000"
					speed={0.4}
					swirl={0.65}
					swirlIterations={10}
					shapeScale={0.3}
					rotation={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center">
				<H1 size="large" className="mb-6">Red + Cream</H1>
				<p class="text-xl text-white mb-4">Vintage Revolution</p>
				<p class="text-zinc-300 text-sm">
					Dark → Cream/Beige → Blood Red
				</p>
				<p class="text-yellow-100 mt-4">
					Old paper, historical documents, aged manifesto
				</p>
			</div>
		</div>
	</main>
</RootLayout>