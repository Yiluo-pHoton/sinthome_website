---
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Red + Bright White - Blood in milk */}
				<WarpBackground
					color1="#1a1a1a"
					color2="#cccccc"
					color3="#ff0000"
					speed={0.92}
					swirl={0.95}
					swirlIterations={18}
					shapeScale={0.14}
					rotation={0.8}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center">
				<H1 size="large" className="mb-6">Red + Bright White</H1>
				<p class="text-xl text-white mb-4">Blood in Milk</p>
				<p class="text-zinc-300 text-sm">
					Dark Gray → Bright White → Pure Red
				</p>
				<p class="text-gray-400 mt-4">
					High contrast, ideas spreading through clean space
				</p>
			</div>
		</div>
	</main>
</RootLayout>