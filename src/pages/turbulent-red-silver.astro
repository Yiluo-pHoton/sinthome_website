---
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Red + Silver - Digital revolution */}
				<WarpBackground
					color1="#0a0a0a"
					color2="#b8b8b8"
					color3="#ff1111"
					speed={0.5}
					swirl={0.75}
					swirlIterations={14}
					shapeScale={0.22}
					rotation={0.4}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center">
				<H1 size="large" className="mb-6">Red + Silver</H1>
				<p class="text-xl text-white mb-4">Digital Revolution</p>
				<p class="text-zinc-300 text-sm">
					Black → Metallic Silver → Bright Red
				</p>
				<p class="text-gray-300 mt-4">
					Technology meets activism, code and blood
				</p>
			</div>
		</div>
	</main>
</RootLayout>