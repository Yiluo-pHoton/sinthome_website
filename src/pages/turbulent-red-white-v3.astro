---
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Red + Off-White - Newspaper revolution */}
				<WarpBackground
					color1="#0a0a0a"
					color2="#e8e8e8"
					color3="#cc0000"
					speed={0.45}
					swirl={0.7}
					swirlIterations={12}
					shapeScale={0.25}
					rotation={0.35}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center">
				<H1 size="large" className="mb-6">Red + Off-White</H1>
				<p class="text-xl text-white mb-4">Newspaper Revolution</p>
				<p class="text-zinc-300 text-sm">
					Black → Off-White → Deep Red
				</p>
				<p class="text-gray-400 mt-4">
					Print media aesthetic, text and blood
				</p>
			</div>
		</div>
	</main>
</RootLayout>