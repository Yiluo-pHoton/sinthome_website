---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#1a1a1a"
					color2="#cccccc"
					color3="#ff0000"
					speed={0.45}
					swirl={0.65}
					swirlIterations={18}
					shapeScale={0.14}
					rotation={0.8}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center overflow-y-auto">
				<div class="space-y-16 py-8">
					<!-- Option 1: Ultra Black with tighter spacing -->
					<div class="text-center">
						<p class="text-white mb-2">Option 1: Ultra Black + Tight Spacing</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase"
							style="font-weight: 900; letter-spacing: -0.04em; text-shadow: 2px 2px 8px rgba(0,0,0,0.8), 0 0 16px rgba(0,0,0,0.6); -webkit-text-stroke: 2px rgba(255,255,255,0.1);">
							SINTHOME
						</h1>
					</div>

					<!-- Option 2: Bold with extra stroke -->
					<div class="text-center">
						<p class="text-white mb-2">Option 2: Bold + Heavy Stroke</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-bold text-white uppercase"
							style="font-weight: 800; letter-spacing: -0.02em; text-shadow: 3px 3px 10px rgba(0,0,0,0.9), 0 0 20px rgba(0,0,0,0.7); -webkit-text-stroke: 3px rgba(255,255,255,0.2);">
							SINTHOME
						</h1>
					</div>

					<!-- Option 3: Compressed/Condensed style -->
					<div class="text-center">
						<p class="text-white mb-2">Option 3: Compressed + Dense</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase"
							style="font-weight: 900; letter-spacing: -0.06em; transform: scaleX(0.9); text-shadow: 2px 2px 8px rgba(0,0,0,0.8), 0 0 16px rgba(0,0,0,0.6); -webkit-text-stroke: 1.5px rgba(255,255,255,0.15);">
							SINTHOME
						</h1>
					</div>

					<!-- Option 4: Extra thick with double stroke -->
					<div class="text-center">
						<p class="text-white mb-2">Option 4: Double Stroke Effect</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase"
							style="font-weight: 900; letter-spacing: -0.03em; text-shadow: 0 0 3px #fff, 0 0 6px #fff, 2px 2px 8px rgba(0,0,0,0.9), 0 0 20px rgba(0,0,0,0.7); -webkit-text-stroke: 2.5px rgba(0,0,0,0.3);">
							SINTHOME
						</h1>
					</div>

					<!-- Option 5: Maximum weight with outline -->
					<div class="text-center">
						<p class="text-white mb-2">Option 5: Maximum Weight</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase"
							style="font-weight: 900; letter-spacing: -0.05em; text-shadow: 4px 4px 12px rgba(0,0,0,1), 0 0 24px rgba(0,0,0,0.8), inset 0 0 4px rgba(255,255,255,0.2); -webkit-text-stroke: 4px rgba(255,255,255,0.25); paint-order: stroke fill;">
							SINTHOME
						</h1>
					</div>

					<!-- Option 6: Italic bold for dynamic feel -->
					<div class="text-center">
						<p class="text-white mb-2">Option 6: Bold Italic + Dynamic</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase italic"
							style="font-weight: 900; letter-spacing: -0.03em; font-style: oblique 10deg; text-shadow: 3px 3px 10px rgba(0,0,0,0.9), 0 0 20px rgba(0,0,0,0.7); -webkit-text-stroke: 2px rgba(255,255,255,0.2);">
							SINTHOME
						</h1>
					</div>

					<!-- Option 7: Custom CSS for extra bold -->
					<div class="text-center">
						<p class="text-white mb-2">Option 7: Custom Extra Bold</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] text-white uppercase"
							style="font-family: system-ui, -apple-system, sans-serif; font-weight: 950; letter-spacing: -0.045em; text-shadow: 2px 2px 6px rgba(0,0,0,0.9), 0 0 18px rgba(0,0,0,0.6); -webkit-text-stroke: 2.5px rgba(255,255,255,0.15); text-rendering: optimizeLegibility;">
							SINTHOME
						</h1>
					</div>

					<!-- Option 8: Stacked shadows for depth -->
					<div class="text-center">
						<p class="text-white mb-2">Option 8: Layered Shadow Depth</p>
						<h1 class="text-8xl lg:text-9xl xl:text-[11rem] font-black text-white uppercase"
							style="font-weight: 900; letter-spacing: -0.035em; text-shadow: 1px 1px 0 #000, 2px 2px 0 #000, 3px 3px 0 #000, 4px 4px 0 #000, 5px 5px 15px rgba(0,0,0,0.8), 0 0 20px rgba(0,0,0,0.6); -webkit-text-stroke: 1px rgba(255,255,255,0.1);">
							SINTHOME
						</h1>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>