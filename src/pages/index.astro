---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Keep the revolutionary turbulent background */}
				<WarpBackground
					color1="#000000"
					color2="#5a0000"
					color3="#ff0000"
					speed={0.9}
					swirl={0.98}
					swirlIterations={25}
					shapeScale={0.12}
					rotation={0.85}
					client:load
				/>
			</div>
        
			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- Clean, Brutalist Hero Section -->
				<div class="flex-1 flex flex-col justify-center items-center text-center">
					<!-- SINTHOME - Raw, Plain, Powerful -->
					<h1 class="text-white font-black uppercase mb-8 px-8 sm:px-12 md:px-16"
						style="font-weight: 900; letter-spacing: -0.02em; font-size: min(20vw, 18rem); line-height: 0.85;">
						SINTHOME
					</h1>

					<!-- Straightforward Tagline -->
					<p class="text-xl sm:text-2xl text-white font-semibold mb-6">
						Knowledge — Critique — Praxis
					</p>

					<!-- Direct Description -->
					<p class="text-base text-white max-w-2xl mx-auto mb-10">
						A public-interest community reconstructing new relations of production through the integration of knowledge learning, theoretical critique, and social praxis
					</p>

					<!-- Plain Practice Tags -->
					<div class="flex flex-wrap justify-center gap-3 mb-10 max-w-3xl">
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Public Lectures
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Psychoanalysis
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Workers Assist
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							AI for Public Good
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Factory AI Solution
						</span>
					</div>

					<!-- Simple, Direct CTAs -->
					<div class="flex flex-col sm:flex-row gap-4">
						<a
							href="/sinthome_website/who-we-are"
							class="px-8 py-4 bg-white text-black font-bold hover:bg-gray-200 transition-colors"
						>
							ABOUT US
						</a>
						<a
							href="/sinthome_website/what-we-do"
							class="px-8 py-4 bg-black text-white font-bold border-2 border-white hover:bg-white hover:text-black transition-colors"
						>
							OUR PROJECTS
						</a>
						<a
							href="/sinthome_website/contact"
							class="px-8 py-4 text-white font-bold border-2 border-white hover:bg-white hover:text-black transition-colors"
						>
							JOIN US
						</a>
					</div>

				</div>

			</div>
		</div>
	</main>
</RootLayout>

<style>
	/* Custom sizes for massive title */
	@media (min-width: 640px) {
		.text-\[10rem\] {
			font-size: 10rem;
			line-height: 0.9;
		}
	}
	@media (min-width: 768px) {
		.text-\[12rem\] {
			font-size: 12rem;
			line-height: 0.9;
		}
	}
	@media (min-width: 1024px) {
		.text-\[16rem\] {
			font-size: 16rem;
			line-height: 0.9;
		}
	}
	@media (min-width: 1280px) {
		.text-\[20rem\] {
			font-size: 20rem;
			line-height: 0.9;
		}
	}
	@media (min-width: 1536px) {
		.text-\[24rem\] {
			font-size: 24rem;
			line-height: 0.9;
		}
	}
</style>