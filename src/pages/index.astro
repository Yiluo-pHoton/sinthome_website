---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#0a0a0a"
					color2="#7f1d1d"
					color3="#dc2626"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">

				<div class="flex justify-end">
					<Navigation client:load>
						<Link href="/blog" variant="secondary">Blog</Link>
						<Link href="/about" variant="secondary">About</Link>
						<Link href="/contact" variant="secondary">Contact</Link>
					</Navigation>
				</div>

				<div class="flex flex-col items-center gap-4">
					<!-- Logo 位置 -->
					<div class="w-400 h-70 sm:w-400 sm:h-70">
						<img src="/sinthome-2.jpg" alt="Sinthome Logo" class="w-full h-full object-contain" />
					</div>
					<h2 class="text-2xl sm:text-3xl font-semibold text-center text-white">A placeholder for subtitle</h2>
				</div>

				<div>
					<!-- <AvailableForWork className="py-4" /> -->
					<div class="mb-2 sm:mb-4 flex flex-col items-center gap-4">
						<div class="flex items-center gap-6 text-lg sm:text-xl">
							<Link href="/about">Who we are</Link>
							<Link href="/projects">What we do</Link>
							<Link href="/contact">Join us</Link>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
