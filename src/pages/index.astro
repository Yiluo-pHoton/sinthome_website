---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Maximum Turbulent Red - Like turbulent water */}
				<WarpBackground
					color1="#000000"
					color2="#5a0000"
					color3="#ff0000"
					speed={0.95}
					swirl={0.98}
					swirlIterations={18}
					shapeScale={0.15}
					rotation={0.85}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- Hero Section with Title and Tagline -->
				<div class="flex-1 flex flex-col justify-center items-center text-center">
					<H1 size="large" className="mb-6">
						Sinthome
					</H1>

					<!-- Enhanced Tagline Presentation -->
					<div class="mb-8 max-w-4xl">
						<p class="text-2xl sm:text-3xl text-white font-semibold mb-6">
							Knowledge—Critique—Praxis
						</p>
						<p class="text-base text-zinc-400 max-w-2xl mx-auto leading-relaxed">
							A public-interest community reconstructing new relations of production through the integration of knowledge learning, theoretical critique, and social praxis
						</p>
					</div>

					<!-- Our Practices -->
					<div class="flex flex-wrap justify-center gap-3 mb-10 max-w-3xl">
						<span class="px-4 py-2 bg-zinc-900/60 text-zinc-300 rounded-full text-sm border border-zinc-800">
							Public Lectures
						</span>
						<span class="px-4 py-2 bg-zinc-900/60 text-zinc-300 rounded-full text-sm border border-zinc-800">
							Psychoanalysis
						</span>
						<span class="px-4 py-2 bg-zinc-900/60 text-zinc-300 rounded-full text-sm border border-zinc-800">
							Worker Solidarity
						</span>
						<span class="px-4 py-2 bg-zinc-900/60 text-zinc-300 rounded-full text-sm border border-zinc-800">
							AI Research
						</span>
						<span class="px-4 py-2 bg-zinc-900/60 text-zinc-300 rounded-full text-sm border border-zinc-800">
							Social Innovation
						</span>
					</div>

					<!-- Three Main CTAs with Improved Text -->
					<div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
						<a
							href="/sinthome_website/who-we-are"
							class="px-8 py-4 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all transform hover:scale-105 text-lg font-semibold shadow-lg hover:shadow-xl"
						>
							Our Mission
						</a>
						<a
							href="/sinthome_website/what-we-do"
							class="px-8 py-4 bg-zinc-800 text-white rounded-lg hover:bg-zinc-700 transition-all transform hover:scale-105 text-lg font-semibold border border-zinc-700 shadow-lg hover:shadow-xl"
						>
							Our Impact
						</a>
						<a
							href="/sinthome_website/contact"
							class="px-8 py-4 bg-transparent text-white rounded-lg hover:bg-white/10 transition-all transform hover:scale-105 text-lg font-semibold border-2 border-white shadow-lg hover:shadow-xl"
						>
							Get Involved
						</a>
					</div>
				</div>

				<!-- Bottom Navigation -->
				<div>
					<div class="mb-2 sm:mb-4 flex items-center justify-end">
						<Navigation client:load>
							<Link href="/sinthome_website/who-we-are" variant="secondary">Who We Are</Link>
							<Link href="/sinthome_website/what-we-do" variant="secondary">What We Do</Link>
							<Link href="/sinthome_website/events" variant="secondary">Events</Link>
							<Link href="/sinthome_website/contact" variant="secondary">Contact</Link>
							<Link href="/sinthome_website/donate" variant="secondary">Donate</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
