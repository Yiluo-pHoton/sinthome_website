---
import RootLayout from "../layouts/RootLayout.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import H1 from "../components/h1.astro";
---

<RootLayout>
  <InfoLayout>
    <H1>Who We Are</H1>

    <div class="space-y-8 text-zinc-300 max-w-4xl">
      <!-- Mission Section -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Our Mission</h2>
        <p class="leading-relaxed">
          [Add your organization's mission statement here. Explain what drives your non-profit and what you aim to achieve.]
        </p>
      </section>

      <!-- Vision Section -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Our Vision</h2>
        <p class="leading-relaxed">
          [Add your vision for the future. What world are you working towards creating?]
        </p>
      </section>

      <!-- Values Section -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Our Values</h2>
        <ul class="space-y-3">
          <li class="flex items-start">
            <span class="text-red-500 mr-2">•</span>
            <div>
              <strong class="text-white">Innovation:</strong> [Description of this value]
            </div>
          </li>
          <li class="flex items-start">
            <span class="text-red-500 mr-2">•</span>
            <div>
              <strong class="text-white">Community:</strong> [Description of this value]
            </div>
          </li>
          <li class="flex items-start">
            <span class="text-red-500 mr-2">•</span>
            <div>
              <strong class="text-white">Impact:</strong> [Description of this value]
            </div>
          </li>
          <li class="flex items-start">
            <span class="text-red-500 mr-2">•</span>
            <div>
              <strong class="text-white">Transparency:</strong> [Description of this value]
            </div>
          </li>
        </ul>
      </section>

      <!-- History Section -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Our Story</h2>
        <p class="leading-relaxed mb-4">
          [Add your organization's founding story and history. When was it founded? By whom? What inspired its creation?]
        </p>
        <p class="leading-relaxed">
          [Add key milestones and achievements throughout your history.]
        </p>
      </section>

      <!-- Team Section -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Our Team</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Team Member Card Example -->
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-white mb-2">[Name]</h3>
            <p class="text-red-400 text-sm mb-3">[Title/Role]</p>
            <p class="text-zinc-400 text-sm">
              [Brief bio or description of role and expertise]
            </p>
          </div>

          <!-- Add more team member cards as needed -->
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-white mb-2">[Name]</h3>
            <p class="text-red-400 text-sm mb-3">[Title/Role]</p>
            <p class="text-zinc-400 text-sm">
              [Brief bio or description of role and expertise]
            </p>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <section class="mt-12 p-8 bg-zinc-900/50 border border-zinc-800 rounded-lg text-center">
        <h2 class="text-2xl font-bold text-white mb-4">Join Our Mission</h2>
        <p class="text-zinc-300 mb-6">
          Be part of the change. There are many ways to get involved and support our cause.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/donate"
            class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
          >
            Donate
          </a>
          <a
            href="/contact"
            class="px-6 py-3 bg-zinc-800 text-white rounded-lg hover:bg-zinc-700 transition-colors"
          >
            Get Involved
          </a>
        </div>
      </section>
    </div>
  </InfoLayout>
</RootLayout>