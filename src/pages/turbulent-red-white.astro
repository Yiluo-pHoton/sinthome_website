---
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Red + White/Gray - Blood in milk/fog */}
				<WarpBackground
					color1="#111111"
					color2="#666666"
					color3="#dd0000"
					speed={0.88}
					swirl={0.92}
					swirlIterations={17}
					shapeScale={0.16}
					rotation={0.78}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-center items-center">
				<H1 size="large" className="mb-6">Red + Gray</H1>
				<p class="text-xl text-white mb-4">Blood in Fog</p>
				<p class="text-zinc-300 text-sm">
					Dark Gray → Light Gray → Pure Red
				</p>
				<p class="text-gray-400 mt-4">
					Ideas spreading through neutral space
				</p>
			</div>
		</div>
	</main>
</RootLayout>