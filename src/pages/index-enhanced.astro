---
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* Keep the perfect turbulent red-black background */}
				<WarpBackground
					color1="#000000"
					color2="#5a0000"
					color3="#ff0000"
					speed={0.95}
					swirl={0.98}
					swirlIterations={18}
					shapeScale={0.15}
					rotation={0.85}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- Hero Section with Enhanced Title -->
				<div class="flex-1 flex flex-col justify-center items-center text-center">
					<!-- MASSIVE SINTHOME Title with Maximum Impact -->
					<div class="relative mb-16 px-4">
						<!-- Subtle backdrop for title area only -->
						<div class="absolute inset-0 -inset-x-20 -inset-y-10 bg-gradient-to-r from-transparent via-black/40 to-transparent blur-xl -z-10"></div>

						<h1 class="text-8xl sm:text-9xl md:text-[10rem] lg:text-[14rem] xl:text-[16rem] 2xl:text-[18rem]
								   text-white font-black uppercase leading-[0.8] tracking-[-0.03em]
								   relative z-20 transform -translate-y-4 transition-all duration-300 ease-out
								   hover:scale-[1.02] hover:-translate-y-6"
							style="
								font-weight: 900;
								text-rendering: optimizeLegibility;
								text-shadow:
									0 0 40px rgba(255, 255, 255, 0.8),
									0 0 80px rgba(255, 255, 255, 0.6),
									0 0 120px rgba(255, 255, 255, 0.4),
									2px 2px 0px rgba(0, 0, 0, 0.9),
									4px 4px 0px rgba(0, 0, 0, 0.7),
									6px 6px 20px rgba(0, 0, 0, 0.8);
								-webkit-text-stroke: 2px rgba(0, 0, 0, 0.8);
								text-stroke: 2px rgba(0, 0, 0, 0.8);
							">
							SINTHOME
						</h1>
					</div>

					<!-- Subdued Tagline and Description -->
					<div class="mb-10 max-w-4xl mt-12">
						<p class="text-lg sm:text-xl text-zinc-300 font-medium mb-6 opacity-80">
							Knowledge — Critique — Praxis
						</p>
						<p class="text-sm text-zinc-500 max-w-2xl mx-auto leading-relaxed opacity-70">
							A public-interest community reconstructing new relations of production through the integration of knowledge learning, theoretical critique, and social praxis
						</p>
					</div>

					<!-- Smaller, Subdued Practice Tags -->
					<div class="flex flex-wrap justify-center gap-2 mb-10 max-w-3xl opacity-60">
						<span class="px-3 py-1 text-zinc-400 rounded-full text-xs border border-zinc-700">
							Public Lectures
						</span>
						<span class="px-3 py-1 text-zinc-400 rounded-full text-xs border border-zinc-700">
							Psychoanalysis
						</span>
						<span class="px-3 py-1 text-zinc-400 rounded-full text-xs border border-zinc-700">
							Workers Assist
						</span>
						<span class="px-3 py-1 text-zinc-400 rounded-full text-xs border border-zinc-700">
							AI for Public Goods
						</span>
						<span class="px-3 py-1 text-zinc-400 rounded-full text-xs border border-zinc-700">
							Factory AI Solution
						</span>
					</div>

					<!-- Smaller CTA Buttons with Less Visual Weight -->
					<div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
						<a
							href="/sinthome_website/who-we-are"
							class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all transform hover:scale-[1.02] text-base font-semibold shadow-lg"
						>
							Our Mission
						</a>
						<a
							href="/sinthome_website/what-we-do"
							class="px-6 py-3 bg-zinc-800 text-white rounded-lg hover:bg-zinc-700 transition-all transform hover:scale-[1.02] text-base font-semibold border border-zinc-700 shadow-lg"
						>
							Our Impact
						</a>
						<a
							href="/sinthome_website/contact"
							class="px-6 py-3 bg-transparent text-white rounded-lg hover:bg-white/10 transition-all transform hover:scale-[1.02] text-base font-semibold border-2 border-white/60 shadow-lg"
						>
							Get Involved
						</a>
					</div>
				</div>

				<!-- Bottom Navigation - Even More Subdued -->
				<div>
					<div class="mb-2 sm:mb-4 flex items-center justify-end opacity-50">
						<Navigation client:load>
							<Link href="/sinthome_website/who-we-are" variant="secondary" className="text-sm">Who We Are</Link>
							<Link href="/sinthome_website/what-we-do" variant="secondary" className="text-sm">What We Do</Link>
							<Link href="/sinthome_website/events" variant="secondary" className="text-sm">Events</Link>
							<Link href="/sinthome_website/contact" variant="secondary" className="text-sm">Contact</Link>
							<Link href="/sinthome_website/donate" variant="secondary" className="text-sm">Donate</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>

<style>
	/* Custom size for extra large screens */
	@media (min-width: 1536px) {
		.text-\[18rem\] {
			font-size: 18rem;
			line-height: 0.8;
		}
	}
</style>